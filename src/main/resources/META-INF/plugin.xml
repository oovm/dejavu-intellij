<idea-plugin>
	<id>DejaVu Language</id>
	<name>DejaVu Language Support</name>
	<vendor>DejaVu Language</vendor>
	<depends>com.intellij.modules.platform</depends>
	<depends optional="true" config-file="plugin-with-rust.xml">org.rust.lang</depends>
	<resource-bundle>messages.DjvBundle</resource-bundle>
	<extensions defaultExtensionNs="com.intellij">
		<fileType
			name="DejaVu"
			language="DejaVu"
			extensions="dj;djv;dejavu;"
			implementationClass="djv.intellij.language.file.DjvFileType"
			fieldName="INSTANCE"/>
		<lang.parserDefinition
			language="DejaVu"
			implementationClass="djv.intellij.language.DjvParserDefinition"/>
		<!-- Highlighter -->
		<colorSettingsPage implementation="djv.intellij.ide.highlight.YggHighlightSettingPage"/>
		<lang.syntaxHighlighter
			language="DejaVu"
			implementationClass="djv.intellij.ide.highlight.HighlightToken"/>
		<highlightVisitor implementation="djv.intellij.ide.highlight.HighlightAST"/>
		<additionalTextAttributes scheme="Default" file="colors/VomlDefault.xml"/>
		<additionalTextAttributes scheme="Darcula" file="colors/VomlDarcula.xml"/>
		<!-- Formatter -->
		<langCodeStyleSettingsProvider
			implementation="djv.intellij.ide.codeStyle.LanguageCodeStyleSettingsProvider"
		/>
		<lang.commenter
			language="DejaVu"
			implementationClass="djv.intellij.ide.VomlCommenter"
		/>
		<lang.braceMatcher
			language="DejaVu"
			implementationClass="djv.intellij.ide.braces.VomlBraceMatcher"
		/>
		<lang.quoteHandler
			language="DejaVu"
			implementationClass="djv.intellij.ide.YggQuoteHandler"
		/>
		<!-- Structure View -->
		<lang.foldingBuilder
			language="DejaVu"
			implementationClass="djv.intellij.ide.folding.FoldingBuilder"
		/>
		<indexPatternBuilder
			implementation="djv.intellij.ide.todo.VomlTodoIndexPatternBuilder"
		/>
		<todoIndexer
			filetype="DejaVu"
			implementationClass="djv.intellij.ide.todo.VomlTodoIndexer"
		/>
		<typedHandler implementation="djv.intellij.ide.completion.CompletionTrigger"/>
		<completion.contributor
			language="DejaVu"
			implementationClass="djv.intellij.ide.completion.CompletionContributor"
		/>
		<annotator
			language="DejaVu"
			implementationClass="djv.intellij.ide.annotator.VomlHighlightingAnnotator"
		/>
		<annotator
			language="DejaVu"
			implementationClass="djv.intellij.ide.annotator.checkers.YggScopeCheckerAnnotator"
		/>
		<annotator
			language="DejaVu"
			implementationClass="djv.intellij.ide.annotator.checkers.YggTableCheckerAnnotator"
		/>

		<lang.formatter
			language="DejaVu"
			implementationClass="djv.intellij.ide.formatter.FormatModel"/>
		<lang.smartEnterProcessor
			language="DejaVu"
			implementationClass="djv.intellij.ide.assist.fixers.SmartEnterProcessor"/>
	</extensions>
	<actions>
		<action
			id="djv.intellij.ide.actions.CreateDejavuFile"
			class="djv.intellij.ide.actions.CreateDejavuFile"
			text="Dejavu File"
			description="Create new Dejavu file">
			<add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewFile"/>
		</action>
	</actions>
</idea-plugin>

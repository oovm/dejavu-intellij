<idea-plugin>
	<id>Yggdrasil</id>
	<name>Yggdrasil Support</name>
	<vendor>Yggdrasil</vendor>
	<depends>com.intellij.modules.platform</depends>
	<!--	<depends optional="true" config-file="plugin-with-rust.xml">org.rust.lang</depends>-->
	<resource-bundle>messages.SahaBundle</resource-bundle>
	<extensions defaultExtensionNs="com.intellij">
		<fileType
			name="Yggdrasil"
			language="Yggdrasil"
			extensions="ygg"
			implementationClass="saha.intellij.language.file.YggdrasilFileType"
			fieldName="INSTANCE"
		/>
		<lang.parserDefinition
			language="Yggdrasil"
			implementationClass="saha.intellij.language.SahaParserDefinition"
		/>
		<!-- Highlighter -->
		<colorSettingsPage implementation="saha.intellij.ide.highlight.YggHighlightSettingPage"/>
		<lang.syntaxHighlighter
			language="Yggdrasil"
			implementationClass="saha.intellij.ide.highlight.HighlightToken"
		/>
		<highlightVisitor implementation="saha.intellij.ide.highlight.HighlightAST"/>
		<additionalTextAttributes scheme="Default" file="colors/VomlDefault.xml"/>
		<additionalTextAttributes scheme="Darcula" file="colors/VomlDarcula.xml"/>
		<!-- Formatter -->
		<langCodeStyleSettingsProvider
			implementation="saha.intellij.ide.codeStyle.LanguageCodeStyleSettingsProvider"
		/>
		<lang.commenter
			language="Yggdrasil"
			implementationClass="saha.intellij.ide.VomlCommenter"
		/>
		<lang.braceMatcher
			language="Yggdrasil"
			implementationClass="saha.intellij.ide.braces.VomlBraceMatcher"
		/>
		<lang.quoteHandler
			language="Yggdrasil"
			implementationClass="saha.intellij.ide.YggQuoteHandler"
		/>
		<!-- Structure View -->
		<lang.foldingBuilder
			language="Yggdrasil"
			implementationClass="saha.intellij.ide.folding.FoldingBuilder"
		/>
		<indexPatternBuilder
			implementation="saha.intellij.ide.todo.VomlTodoIndexPatternBuilder"
		/>
		<todoIndexer
			filetype="Yggdrasil"
			implementationClass="saha.intellij.ide.todo.VomlTodoIndexer"
		/>
		<completion.contributor
			language="Yggdrasil"
			implementationClass="saha.intellij.ide.completion.YCompletionContributor"
		/>
		<annotator
			language="Yggdrasil"
			implementationClass="saha.intellij.ide.annotator.VomlHighlightingAnnotator"
		/>
		<annotator
			language="Yggdrasil"
			implementationClass="saha.intellij.ide.annotator.checkers.YggScopeCheckerAnnotator"
		/>
		<annotator
			language="Yggdrasil"
			implementationClass="saha.intellij.ide.annotator.checkers.YggTableCheckerAnnotator"
		/>

		<lang.formatter
			language="Yggdrasil"
			implementationClass="saha.intellij.ide.formatter.FormatModel"
		/>
		<lang.smartEnterProcessor
			language="Yggdrasil"
			implementationClass="saha.intellij.ide.assist.fixers.VomlSmartEnterProcessor"
		/>
	</extensions>
	<actions>
		<action
			id="saha.intellij.ide.actions.YggCreateFile"
			class="saha.intellij.ide.actions.YggCreateFile"
			text="Voml File"
			description="Create new Voml file"
		>
			<add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewFile"/>
		</action>
	</actions>
</idea-plugin>
